<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
  <div class="reviews-header">
    <h3>Reviews</h3>
    <%= link_to "Add review", new_restaurant_review_path(@restaurant)  %>
  </div>
  <div class="reviews-container">
    <% @reviews.each do |r| %>
      <p>Raiting: <%= r.rating %></p>
      <p><%= r.content %></p>
    <% end %>
  </div>
  <%= render "form", review: @review, restaurant: @restaurant %>
</div>

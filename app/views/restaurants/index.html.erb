<div class="container">
  <h1>Restaurants</h1>
  <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-primary" %>
  <div class="restaurants-container">
    <% @restaurants.each do |r| %>
      <div class="restaurant">
        <%= link_to r.name, restaurant_path(r)  %>
      </div>
    <% end %>
  </div>
</div>
